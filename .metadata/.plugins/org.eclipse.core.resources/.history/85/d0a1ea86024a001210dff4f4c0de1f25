package uk.ac.cam.cl.ss958.SpringBoardSimulation;

import java.awt.Point;

public class ComputationalGeometry {
	
	class Point {
		int x;
		int y;
		
		Point(int x, int y) {
			this.x = x;
			this.y = y;
		}
		
		int getX() {
			return x;
		}
		int getY() {
			return y;
		}
		void setX(int x) {
			this.x = x;
		}
		void setY(int y) {
			this.y = y;
		}
	}
	
	static int square(int x) {
		return x*x;
	}
	
	static int euclideanDistanceSquared(Point a, Point b) {
		return square(a.getX()-b.getX()) + square(a.getX()-a.getY());
	}
}
